<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetailMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/viewgambarmenu"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/textViewNamaMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="Nama Menu"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/textViewKategoriMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Kategori"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/textViewHargaMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Harga Menu"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:fontFamily="@font/poppins"
            android:onClick="editMenu" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:fontFamily="@font/poppins"
            android:onClick="deleteMenu" />

    </LinearLayout>
</RelativeLayout>