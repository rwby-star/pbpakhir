<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewNamaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewKategoriMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/textViewNamaMenu"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewHargaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/textViewKategoriMenu"
        android:textStyle="bold"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/viewgambarmenu"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/textViewHargaMenu"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_foreground" />

</RelativeLayout>
