<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".CreateMeja">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="Tambah Meja."
            android:textColor="@color/lavender"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/crtmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_done_24"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/addData"
            android:layout_marginEnd="6dp"/>

        <EditText
            android:id="@+id/crtidmeja"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="ID Meja"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_below="@id/addData"
            android:background="@drawable/orange_border"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/spinnerText"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:hint="Pilih Warung"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_below="@id/crtidmeja"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:maxLines="1"/>

        <Spinner
            android:id="@+id/spinnerMejaWarung"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/orange_border"
            android:layout_below="@id/spinnerText"
            android:fontFamily="@font/poppins"/>

    </RelativeLayout>
</ScrollView>