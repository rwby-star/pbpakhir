<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".CreateMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="Tambah Menu."
            android:textColor="@color/lavender"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/crtmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_done_24"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/addData"
            android:layout_marginEnd="6dp"/>

        <EditText
            android:id="@+id/crtidmenu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="ID Menu"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_below="@id/addData"
            android:background="@drawable/orange_border"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/crtnamamenu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Nama Menu"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_below="@id/crtidmenu"
            android:background="@drawable/orange_border"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/crthargamenu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Harga Menu"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_below="@id/crtnamamenu"
            android:background="@drawable/orange_border"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/kategoriSpinner"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:hint="Pilih Kategori"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_below="@id/crthargamenu"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:maxLines="1"/>

        <Spinner
            android:id="@+id/kategoriMenu"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:entries="@array/kategorimenu"
            android:background="@drawable/orange_border"
            android:layout_below="@id/kategoriSpinner"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/spinnerText"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:hint="Pilih Warung"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_below="@id/kategoriMenu"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:maxLines="1"/>

        <Spinner
            android:id="@+id/spinnerWarung"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/orange_border"
            android:layout_below="@id/spinnerText"
            android:fontFamily="@font/poppins"/>

        <ImageView
            android:id="@+id/inputGambarMenu"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_below="@id/spinnerWarung" />

        <Button
            android:id="@+id/btnInputGambarMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputGambarMenu"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="Upload Gambar"/>

    </RelativeLayout>
</ScrollView>